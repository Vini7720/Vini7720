Var
   // Solicitando a quantidade de Kg das maças e morangos.
   maca: real
   morango: real
   calcMaca: real
   calcMorango: real
   valorDaCompra: real
   desconto:real
Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   escreval ("escreva a quantidade de maças e morangos compradas Kg: ")
   leia(maca, morango)

   calcMaca<- 1.80 * maca
   calcMorango<- 2.50 * morango)
   se (calcMaca > 8) ou (calcMaca >= 25.00) entao
   escreval ("Total a ser pago sem promoção pela maçã: ", calcMaca)
      maca <- (calcMaca * 0.1)
      desconto <- calcMaca - maca
      escreval ("Valor a ser pago com 10% de desconto da Maçã: ", desconto)
     escreval (" ")
      se (calcMorango > 8) ou (calcMorango >= 25.00) entao
         escreval ("Total a ser pago sem promoção pelo morango: ", calcMorango)

         morango <- (calcMorango * 0.1)
         desconto <- calcMorango - morango
         escreval ("Valor a ser pago com 10% de desconto do Morango: ", desconto)


Fimalgoritmo
fimse
fimse

escreval ("Total a ser pago sem promoção pela maçã: ", calcMaca)
escreval ("Total a ser pago sem promoção pelo morango: ", calcMorango)
escreval("")

